{
    // ========================================
    // PYTHON CONFIGURATION
    // ========================================
    "python.defaultInterpreterPath": "./server/.venv/bin/python",
    "python.terminal.activateEnvironment": true,
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "server/tests",
        "-v",
        "--tb=short"
    ],
    "python.testing.pytestPath": "./server/.venv/bin/pytest",
    "python.analysis.extraPaths": [
        "./server"
    ],
    "python.analysis.autoImportCompletions": true,
    "python.analysis.typeCheckingMode": "basic",
    // ========================================
    // MODERN PYTHON TOOL CONFIGURATION
    // ========================================
    "flake8.path": [
        "./server/.venv/bin/flake8"
    ],
    "flake8.args": [
        "--config=./server/.flake8"
    ],
    "mypy-type-checker.path": [
        "./server/.venv/bin/mypy"
    ],
    "mypy-type-checker.args": [
        "--config-file=./server/pyproject.toml"
    ],
    "black-formatter.path": [
        "./server/.venv/bin/black"
    ],
    "black-formatter.args": [
        "--config=./server/pyproject.toml"
    ],
    "isort.path": [
        "./server/.venv/bin/isort"
    ],
    "isort.args": [
        "--settings-path=./server/pyproject.toml"
    ],
    // ========================================
    // TYPESCRIPT/JAVASCRIPT CONFIGURATION
    // ========================================
    "typescript.preferences.importModuleSpecifier": "relative",
    "typescript.suggest.autoImports": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "javascript.suggest.autoImports": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    // ========================================
    // ESLINT CONFIGURATION
    // ========================================
    "eslint.workingDirectories": [
        "./app"
    ],
    "eslint.validate": [
        "javascript",
        "typescript",
        "javascriptreact",
        "typescriptreact"
    ],
    "eslint.options": {
        "cwd": "./app"
    },
    // ========================================
    // FILE MANAGEMENT
    // ========================================
    "files.exclude": {
        "**/.git": true,
        "**/node_modules": true,
        "**/.next": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/htmlcov": true,
        "**/.coverage": true,
        "**/.venv": true,
        "**/tsconfig.tsbuildinfo": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/.venv/**": true,
        "**/server/.venv/**": true,
        "**/app/.next/**": true,
        "**/app/node_modules/**": true,
        "**/__pycache__/**": true,
        "**/.pytest_cache/**": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/.venv": true,
        "**/htmlcov": true,
        "**/.next": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true
    },
    // ========================================
    // EDITOR CONFIGURATION
    // ========================================
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit",
        "source.organizeImports": "explicit",
        "source.fixAll.flake8": "explicit"
    },
    "editor.rulers": [
        88,
        120
    ],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    // ========================================
    // LANGUAGE-SPECIFIC SETTINGS
    // ========================================
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.fixAll.flake8": "explicit"
        },
        "editor.tabSize": 4
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features",
        "editor.tabSize": 2
    },
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features",
        "editor.tabSize": 2
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features",
        "editor.tabSize": 2
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features",
        "editor.tabSize": 2
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.tabSize": 2
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.tabSize": 2
    },
    "[markdown]": {
        "editor.defaultFormatter": "vscode.markdown-language-features",
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        }
    },
    // ========================================
    // TERMINAL CONFIGURATION
    // ========================================
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.cwd": "${workspaceFolder}",
    "terminal.integrated.env.linux": {
        "PYTHONPATH": "${workspaceFolder}/server"
    },
    // ========================================
    // GIT CONFIGURATION
    // ========================================
    "git.ignoreLimitWarning": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    // ========================================
    // WORKSPACE CONFIGURATION
    // ========================================
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    // ========================================
    // TESTING CONFIGURATION
    // ========================================
    "python.testing.unittestEnabled": false,
    "python.testing.autoTestDiscoverOnSaveEnabled": true,
    // ========================================
    // PERFORMANCE OPTIMIZATIONS
    // ========================================
    "typescript.disableAutomaticTypeAcquisition": false,
    "typescript.preferences.useLabelDetailsInCompletionEntries": true,
    "emmet.includeLanguages": {
        "javascriptreact": "html",
        "typescriptreact": "html"
    }
}