            }
        },
        // ========================================
        // CLEANUP AND MAINTENANCE
        // ========================================
        {
            "label": "Cleanup: Clear All Caches",
            "type": "shell",
            "command": "echo 'üßπ Clearing caches...' && rm -rf server/__pycache__ server/app/__pycache__ server/.pytest_cache && cd app && rm -rf .next node_modules/.cache && echo '‚úÖ Caches cleared'",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "group": "cleanup"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Cleanup: Reset Node Modules",
            "type": "shell",
            "command": "rm -rf node_modules package-lock.json && npm install",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "group": "cleanup"
            },
            "options": {
                "cwd": "${workspaceFolder}/app"
            }
        },
        {
            "label": "Cleanup: Reset Python Environment",
            "type": "shell",
            "command": "rm -rf .venv && python -m venv .venv && source .venv/bin/activate && pip install --upgrade pip && pip install -r requirements.txt",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "group": "cleanup"
            },
            "options": {
                "cwd": "${workspaceFolder}/server"
            }
        }
